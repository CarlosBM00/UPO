//Escribir un programa que muestre por pantalla un triángulo de altura h (leída por teclado) relleno de asteriscos.

#include <stdio.h>

int h, i, j;

int main(){

  printf("Altura: ");
  scanf("%d",&h);

  for (i=1;i<h;i++){
    printf("*\n");
    for (j=1; j<=i;j++){
      printf("*");  
    }
    if(i==h-1) printf("*\n");
  }
  return 0;
}

