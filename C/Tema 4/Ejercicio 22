/* Algoritmo que sume los elementos m√∫ltiplos de tres de un vector t de N reales.   */
#include<stdio.h>
#define k 5


int main(void){
  int i, buscar, lista[k], mitad;
  int a = 0;
  int b = k;
  int contadorA = 0;
  int contadorB = 0;

  printf("Ingresa un numero a buscar: ");
  scanf("%d", &buscar);

  while (a <= b){
    contadorA++;
    mitad = (a + b) / 2;

    if(buscar > 200){
      printf("Numero no encontrado\n");
      break;
    }

    if(buscar == lista[mitad]){
      printf("Numero %d encontrado en posicion %d\n", lista[mitad], mitad);
      break;
    }
    else if(buscar < lista[mitad]){
      b = mitad -1;
    }
    else{
      a = mitad + 1;
    }
    contadorB++;

  }

if(contadorA == contadorB){
  printf("Numero no encontrado\n");
}

  printf("====================================================\n\n");

  for( i = 0; i <= k; i++){
    lista[i] = i * 2;
  }


  for(i = 0; i <= k; i++){
    printf("%d  ", lista[i]);
    if( i % 10 == 0 && i != 0)
      printf("\n");
  }
  printf("\n\n====================================================\n");

return 0;

}
