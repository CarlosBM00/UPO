/* Algoritmo que ordene un vector t de N reales (leído por teclado) por el método de selección */

#include<stdio.h>

int main(){

int i, j, n, aux;

printf("Número de valores: ");
scanf("%d", &n);

int t[n];

for (i = 0; i < n; i++) {
    printf("Número %d: ", i+1);
    scanf("%d", &t[i]);
}
for (i = 0; i < n; i++) {
    for (j = i+1; j <= n; j++) {
        if(t[i]>t[j]){
            aux = t[j];  /* CAMBIAR POSICION X POR Y EN UN VECTOR */
            t[j] = t[i];
            t[i] = aux;
            printf("%d", );
        }
    }
}

return 0;
}
