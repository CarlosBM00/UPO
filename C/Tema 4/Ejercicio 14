/* Algoritmo que sume los elementos de la diagonal principal de una matriz m de NxN reales */
#include <stdio.h>
#define k 2

int main() {

int i, j, sum;

int m[2][2]={{1,3},
             {3,4}};
sum=0;
for(i=0;i<k;i++){
        for(j=0;j<k;j++){
                if(i==j)
                sum = sum + m[i][j];
        }

}

printf("La suma de la diagonal es: %d", sum);

return 0;
}
