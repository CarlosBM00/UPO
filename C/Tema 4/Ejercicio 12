/* Algoritmo que sume los elementos de la fila k de una matriz m de NxN reales*/
#include <stdio.h>
#define k 2

int main() {

int i, n, sum;


printf("Sumar la fila: ");
scanf("%d", &n);

int m[2][2]={{1,2},
             {3,4}};
sum=0;
for(i=0;i<k;i++){
    sum = sum + m[n-1][i];
}

printf("La suma de la fila %d es: %d", n, sum);

return 0;
}
