// Calcular la media aritmética de tres números reales leídos por teclado.

#include <stdio.h>

int main (){

  float a, b , c, resultado;

  printf("Número 1: ");
  scanf("%f", &a);
  printf("Número 2: ");
  scanf("%f", &b);  
  printf("Número 3: ");
  scanf("%f", &c); 

  resultado = (a+b+c)/3;

  printf("La media aritmética de esos tres números es: %.2f", resultado);

return 0;
}

