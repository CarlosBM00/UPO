// Calcular las raíces de una ecuación de segundo grado a partir de los tres coeficientes (a, b y c) leídos por teclado.

#include <stdio.h>
#include <math.h>

float a, b , c, result1, result2;

int main (){

  printf("Valor de a: ");
  scanf("%f", &a);
  printf("Valor de b: ");
  scanf("%f", &b);  
  printf("Valor de c: ");
  scanf("%f", &c);    

result1 = (-b+sqrt((b*b)-4*a*c))/2*a;
result2 = (-b-sqrt((b*b)-4*a*c))/2*a;

printf("Solución 1: %.2f\nSolución 2: %.2f", result1, result2);

return 0;
}

