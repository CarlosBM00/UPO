/* Escribir una funci√≥n que calcule la suma de los elementos de la diagonal principal de una matriz.*/

#include <stdio.h>
#define N 2

int sumadiagonal( int m[N][N]);

int main(){
int m[N][N] ={{2,4},
              {1,5}};

printf("Suma de la diagonal principal: %d", sumadiagonal(m));

}

int sumadiagonal(int m[N][N]){
int i, j, sum;
sum = 0;
for(i=0;i<N;i++){
    for(j=0;j<N;j++){
        if(i == j)
        sum = sum + m[i][j];
    }
}
    return sum;
}
