/*  Escribir una funci√≥n que determine si alguna fila de una determinada matriz suma igual que la diagonal secundaria de dicha matriz */

#include <stdio.h>
#define N 3

int sumasecundaria( int m[N][N]);
int sumafila (int m[N][N], int a);
int filaigualsecundaria (int m[N][N]);

int main(){
int m[N][N] ={{2,4,3},
              {1,5,4},
              {0,6,1}};


if(filaigualsecundaria(m) == 1)
printf("Existe alguna fila cuya suma total es igual a la suma de la secundaria");
else
  printf("No existe ninguna fila cuya suma total sea igual a la suma de la secundaria");
}

int sumasecundaria(int m[N][N]){
int i, j, sum;
sum = 0;
for(i=0;i<N;i++){
    for(j=0;j<N;j++){
        if(j == N - i -1)
        sum = sum + m[i][j];
    }
}
    return sum;
}
int sumafila (int m[N][N], int a){
int j, suma = 0;

    for(j=0; j<N;j++){
        suma = suma + m[a][j];
    }

return suma;
}
int filaigualsecundaria (int m[N][N]){
int i, exito = 0;

    for(i=0; i<N; i++){

        if(sumafila(m, i) == sumasecundaria(m))
            exito = 1;
    }
    return exito;
}
