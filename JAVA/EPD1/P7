/* Escriba un programa que, dado un número entero por parte del usuario, calcule el factorial del mismo y lo muestre por pantalla */

import poo.io.*;

public class EPD1_P7 {

    public static void main(String[] args) {
        int i,b = 1;

        System.out.print("Número: ");
        int a = (int) IO.readNumber();

        for (i = 1; i <= a; i++) {
            b = b * i;
        }
        
        System.out.println("Factorial de " + a + " = " + b);
    }

}
